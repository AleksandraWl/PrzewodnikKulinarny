<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.malami.przewodnikkulinarny.DodawanieRestauracji">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#3399FF"
        android:minHeight="?attr/actionBarSize"
        app:title="Dodaj kategorie"
        />


    <EditText
        android:id="@+id/NowaKategoria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Kategoria"
        tools:layout_editor_absoluteY="50dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="74dp"
        android:layout_marginStart="16dp" />

    <EditText
        android:id="@+id/Informacje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Informacje"
        tools:layout_editor_absoluteY="110dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="146dp"
        android:layout_marginStart="16dp" />


    <Button
        android:id="@+id/dodajKategorie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="169dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="205dp"
        android:layout_marginStart="16dp"
        android:text="Dodaj kategorie"
        android:onClick="DodajKategorie"/>

</RelativeLayout>
